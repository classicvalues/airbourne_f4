{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "make",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=DEBUG",
                "..",
                "&&",
                "make",
                "-j4",
            ],
            "options": {
                "cwd": "${workspaceRoot}/build",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "makefile",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/examples/i2c_mag",
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
